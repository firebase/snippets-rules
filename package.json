    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "expect-firestore": "^1.0.1",
    "google-auth-library": "^1.3.1",
    "googleapis": "^27.0.0",
    "mocha": "^5.0.4",
    "recursive-readdir-sync": "^1.0.6"
  },
